<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/black"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="br.example.myapplication2.app.MainActivity">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="fill_parent"
        android:layout_height="600dp"
        android:background="@drawable/visor_style"
        android:visibility="visible">

        <ScrollView
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="horizontal|vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal|vertical">


                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                </TableRow>

            </HorizontalScrollView>

        </ScrollView>


    </TableLayout>

    <LinearLayout
        android:id="@+id/layout0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tableLayout"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_Porcent"
            android:layout_width="260dp"
            android:layout_height="90dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/symbolsbutton"
            android:gravity="center"
            android:onClick="adicionaPorcentagem"
            android:text="@string/Porcentagem"
            android:textColor="@color/white"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/btn_clearAll"
            android:layout_width="260dp"
            android:layout_height="90dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/symbolsbutton"
            android:gravity="center"
            android:onClick="apagaTudo"
            android:text="@string/clearAll"
            android:textColor="@color/white"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="260dp"
            android:layout_height="90dp"
            android:layout_weight="0.15"
            android:background="@drawable/symbolsbutton"
            android:onClick="apagaDigitos"
            android:text="@string/clear"
            android:textColor="@color/white"
            android:textSize="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout0"
        android:gravity="center_horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/n7"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n7"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/n8"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n8"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/n9"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n9"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/btn_Div"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/symbolsbutton"
            android:onClick="adicionaTipo"
            android:text="@string/Dividir"
            android:textColor="@color/white"
            android:textSize="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:gravity="center_horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/n4"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n4"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/n5"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n5"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/n6"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n6"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/btn_Mult"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/symbolsbutton"
            android:onClick="adicionaTipo"
            android:text="@string/mult"
            android:textColor="@color/white"
            android:textSize="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:gravity="center_horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/n1"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n1"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/n2"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n2"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/n3"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n3"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/btn_Menos"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/symbolsbutton"
            android:onClick="adicionaTipo"
            android:text="@string/Menos"
            android:textColor="@color/white"
            android:textSize="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:gravity="center_horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/n0"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/numbers"
            android:onClick="adicionaValor"
            android:text="@string/n0"
            android:textColor="@color/black"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/btn_Ponto"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/symbolsbutton"
            android:onClick="adicionaPonto"
            android:text="@string/nPONTO"
            android:textColor="@color/white"
            android:textSize="50dp"/>


        <Button
            android:id="@+id/btn_Equal"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/symbolsbutton"
            android:onClick="adicionaCalculo"
            android:text="@string/Equal"
            android:textColor="@color/white"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/btn_Soma"
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_margin="0.5dp"
            android:layout_weight="0.15"
            android:background="@drawable/symbolsbutton"
            android:onClick="adicionaTipo"
            android:text="@string/Soma"
            android:textColor="@color/white"
            android:textSize="50dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txv_Campo1"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="12dp"
        android:maxLength="16"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/cinzaEscuro"
        android:textSize="60dp"/>

    <TextView
        android:id="@+id/txv_separacao"
        android:layout_width="600dp"
        android:layout_height="4dp"
        android:layout_alignTop="@+id/txv_Calc"
        android:layout_gravity="left"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/border_bottom"
        android:maxLength="1"
        android:textColor="@color/cinzaEscuro"
        android:textSize="50dp"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/txv_Calc"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="250dp"
        android:layout_toRightOf="@+id/txv_separacao"
        android:gravity="right"
        android:maxLength="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/cinzaEscuro"
        android:textSize="65dp"/>

    <TextView
        android:id="@+id/txv_Campo2"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignRight="@+id/tableLayout"
        android:layout_below="@+id/txv_Calc"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:maxLength="16"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/cinzaEscuro"
        android:textSize="60dp"/>


</RelativeLayout>
